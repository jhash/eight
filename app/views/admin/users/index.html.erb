<% content_for(:sidebar_filters) do %>
  <%= render "admin/shared/filter_form", form_url: admin_users_path do |f| %>
    <%= render "admin/shared/filter_field", 
        form: f, 
        field_name: :name, 
        label_text: "Name",
        placeholder: "Search by name..." %>
    
    <%= render "admin/shared/filter_field", 
        form: f, 
        field_name: :email, 
        label_text: "Email",
        placeholder: "Search by email..." %>
  <% end %>
<% end %>

<%= render Admin::TableWrapperComponent.new do |wrapper| %>
  <% wrapper.with_header do %>
    <%= render Admin::PageHeaderComponent.new(
      title: "Users",
      description: "A list of all users in the system",
      action_text: "New User",
      action_path: new_admin_user_path
    ) %>
  <% end %>
  
  <% wrapper.with_table do %>
    <%= render Admin::ModelTableComponent.new(models: @users, model_class: User) %>
  <% end %>
  
  <% wrapper.with_pagination do %>
    <%= paginate @users if @users.respond_to?(:total_pages) %>
  <% end %>
<% end %>