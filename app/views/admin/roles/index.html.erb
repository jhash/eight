<% content_for(:sidebar_filters) do %>
  <%= render "admin/shared/filter_form", form_url: admin_roles_path do |f| %>
    <%= render "admin/shared/filter_field", 
        form: f, 
        field_name: :name, 
        label_text: "Name",
        placeholder: "Search by role name..." %>
  <% end %>
<% end %>

<%= render Admin::TableWrapperComponent.new do |wrapper| %>
  <% wrapper.with_header do %>
    <%= render Admin::PageHeaderComponent.new(
      title: "Roles",
      description: "A list of all roles in the system",
      action_text: "New Role",
      action_path: new_admin_role_path
    ) %>
  <% end %>
  
  <% wrapper.with_table do %>
    <%= render Admin::ModelTableComponent.new(models: @roles, model_class: Role) %>
  <% end %>
  
  <% wrapper.with_pagination do %>
    <%= paginate @roles if @roles.respond_to?(:total_pages) %>
  <% end %>
<% end %>