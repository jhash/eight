<div class="max-w-6xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4">Welcome to Eight</h1>
    
    <% if logged_in? %>
      <div class="bg-white rounded-lg shadow-md p-6 mb-8 max-w-md mx-auto">
        <h2 class="text-2xl font-semibold mb-4">Hello, <%= current_user.name %>!</h2>
        <p class="text-gray-600 mb-6">Email: <%= current_user.email %></p>
        
        <%= button_to "Sign Out", logout_path, method: :delete, 
            class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded w-full",
            data: { turbo: false } %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold mb-6">Sign in to continue</h2>
        
        <div class="space-y-4">
          <%= link_to "/auth/google_oauth2", method: :post,
              class: "flex items-center justify-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg transition duration-200",
              data: { turbo: false } do %>
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Sign in with Google
          <% end %>
          
          <%= link_to "/auth/github", method: :post,
              class: "flex items-center justify-center bg-gray-800 hover:bg-gray-900 text-white font-bold py-3 px-6 rounded-lg transition duration-200",
              data: { turbo: false } do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Sign in with GitHub
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @recent_blog_posts.any? %>
    <section class="mt-16">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold">Recent Blog Posts</h2>
        <%= link_to "View All →", blog_posts_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @recent_blog_posts.each do |blog_post| %>
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <%= link_to blog_post_path(blog_post), class: "block" do %>
              <% if blog_post.featured_image_url.present? %>
                <div class="h-48 overflow-hidden">
                  <%= image_tag blog_post.featured_image_url, 
                      alt: blog_post.featured_image_alt || blog_post.title,
                      class: "w-full h-full object-cover hover:scale-105 transition-transform duration-300" %>
                </div>
              <% end %>
              
              <div class="p-6">
                <% if blog_post.tags.any? %>
                  <div class="flex gap-2 mb-3">
                    <% blog_post.tags.limit(2).each do |tag| %>
                      <span class="text-xs font-semibold uppercase tracking-wider text-blue-600">
                        <%= tag.name %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
                
                <h3 class="text-xl font-semibold mb-2 hover:text-blue-600">
                  <%= blog_post.title %>
                </h3>
                
                <% if blog_post.excerpt.present? %>
                  <p class="text-gray-600 mb-4 line-clamp-2">
                    <%= blog_post.excerpt %>
                  </p>
                <% end %>
                
                <div class="flex items-center text-sm text-gray-500">
                  <span><%= blog_post.user.name %></span>
                  <span class="mx-2">·</span>
                  <% if blog_post.published_at.present? %>
                    <time datetime="<%= blog_post.published_at.iso8601 %>">
                      <%= l(blog_post.published_at, format: :short) %>
                    </time>
                  <% end %>
                </div>
              </div>
            <% end %>
          </article>
        <% end %>
      </div>
    </section>
  <% end %>
</div>