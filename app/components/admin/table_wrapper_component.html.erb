<div class="bg-white shadow-sm rounded-lg">
  <% if header? %>
    <%= header %>
  <% end %>
  
  <% if table? %>
    <div class="overflow-x-auto">
      <%= table %>
    </div>
  <% end %>
  
  <% if show_pagination && pagination? %>
    <div class="px-6 py-4 border-t border-gray-200">
      <%= pagination %>
    </div>
  <% end %>
</div>